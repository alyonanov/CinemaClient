<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="380.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.user.ChangePasswordController">
   <PasswordField fx:id="currentPassword" layoutX="80.0" layoutY="40.0" promptText="Текущий пароль" style="-fx-background-radius: 15;">
      <font>
         <Font name="Georgia" size="17.0" />
      </font>
   </PasswordField>
   <PasswordField fx:id="newPassword" layoutX="80.0" layoutY="100.0" promptText="Новый пароль" style="-fx-background-radius: 15;">
      <font>
         <Font name="Georgia" size="17.0" />
      </font>
   </PasswordField>
   <PasswordField fx:id="confirmedPassword" layoutX="80.0" layoutY="160.0" promptText="Повторите пароль" style="-fx-background-radius: 15;">
      <font>
         <Font name="Georgia" size="17.0" />
      </font>
   </PasswordField>
   <Button fx:id="save" layoutX="60.0" layoutY="224.0" mnemonicParsing="false" style="-fx-background-color: #DEDF42;" text="Сохранить">
      <font>
         <Font name="Georgia" size="16.0" />
      </font>
   </Button>
   <Button fx:id="cancel" layoutX="237.0" layoutY="224.0" mnemonicParsing="false" style="-fx-background-color: #DEDF42;" text="Отмена">
      <font>
         <Font name="Georgia" size="16.0" />
      </font>
   </Button>
</AnchorPane>
